{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./build",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ]
}
